@model TicketViewModel

@{
    ViewData["Title"] = "Inativação de Ingresso";
}

<h2>@ViewData["Title"]</h2>

<hr />

<!--Montando uma tela de confirmação:-->
<h3>Tem certeza que deseja inativar esse ingresso?</h3>

<!--Estrutura para mostrar os dados do objeto:-->
<div>

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Piece)</dt>
        <dd>@Html.DisplayFor(m => m.Piece.Name)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.QuantityOfSeats)</dt>
        <dd>@Html.DisplayFor(m => m.QuantityOfSeats)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Schedule)</dt>
        <dd>@Model.Schedule.ToString("hh\\:mm")</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Date)</dt>
        <dd>@Model.Date.ToString("dd/MM/yyyy")</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Price)</dt>
        <dd>@Html.DisplayFor(m => m.Price)</dd>
    </dl>

    <form asp-action="Inactivate">
        <!--Campo oculto para enviar o código que será inativado:-->
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Inativar" class="btn btn-danger" />
        <a asp-action="Index">Voltar</a>
    </form>
</div>