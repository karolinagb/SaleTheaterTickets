@model IEnumerable<Piece>

<div class="row">
    <div class="col-md-3">

        <h4>Peças Disponíveis</h4>

    </div>
    <div class="col-md-3">
        @*<a asp-action="Create" type="button" class="btn btn-primary">Cadastrar Peça</a>*@
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Cadastrar Peça
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Como deseja cadastrar?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <a asp-action="Index" asp-controller="Upload" class="btn btn-secondary">Upload de excel</a>
                        <a asp-action="Create" asp-controller="AdminPieces" class="btn btn-primary">Formulário</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<table id="data-table" class="table display nowrap">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
            <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var piece in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => piece.Id)</td>
                <td>@Html.DisplayFor(x => piece.Name)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@piece.Id">Editar</a>
                    <a asp-action="Details" asp-route-id="@piece.Id">Detalhes</a>
                    <a asp-action="Inactivate" asp-route-id="@piece.Id">Inativar</a>
                </td>
            </tr>
        }
</table>