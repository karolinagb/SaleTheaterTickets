@model PieceViewModel

@{
    ViewData["Title"] = "Inativação de Peça";
}

<h2>@ViewData["Title"]</h2>

<hr /> 

<!--Montando uma tela de confirmação:-->
<h3>Tem certeza que deseja inativar essa peça?</h3>

<!--Estrutura para mostrar os dados do objeto:-->
<div>

    <!--Listando os campos do objetos com o dl (dt = mostra o nome do campo e dl = mostra o valor do campo:-->
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Inactivate">
        <!--Campo oculto para enviar o código que será deletado:-->
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Inativar" class="btn btn-danger" />
        <a asp-action="Index">Voltar</a>
    </form>
</div>