@model TicketViewModel

<h3 class="text-center">
    Cadastro de Peças
</h3>

<div class="row">
    <div class="col-md-12">
        <h4>Cadastro de Ingressos</h4>
        <form asp-action="Create" class="form-horizontal">
            <hr />
            <div class="form-group">
                <label asp-for="Price" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="QuantityOfSeats" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="QuantityOfSeats" type="number" class="form-control" />
                    <span asp-validation-for="QuantityOfSeats" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Schedule" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Schedule" class="form-control" />
                    <span asp-validation-for="Schedule" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PieceId" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <select asp-for="PieceId" asp-items="@(new SelectList(Model.Pieces, "Id", "Name"))" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="container container-elements-center">
                        <input type="submit" class="btn btn-success " value="Salvar" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>