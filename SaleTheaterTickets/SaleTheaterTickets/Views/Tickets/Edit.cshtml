@model TicketViewModel

<h3 class="text-center">
    Editar Ingresso
</h3>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" class="form-horizontal">
            <hr />
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Price" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Price" type="text" class="form-control" id="money" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="QuantityOfSeats" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="QuantityOfSeats" type="text" class="form-control" id="number" />
                    <span asp-validation-for="QuantityOfSeats" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Schedule" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Schedule" class="form-control" />
                    <span asp-validation-for="Schedule" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PieceId" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <select asp-for="PieceId" asp-items="@(new SelectList(Model.Pieces, "Id", "Name"))" class="form-control">
                        <option value="">Selecione a peça</option>
                    </select>
                    <span asp-validation-for="PieceId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="container container-elements-center">
                        <input type="submit" class="btn btn-success " value="Salvar" />
                        <a asp-action="Index" class="btn btn-success">Cancelar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>